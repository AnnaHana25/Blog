<h2 class="blog-title"><%= @post.title %></h2>
<p class="post"><%= @post.body %></p>
<p>
<%= image_tag @post.image.url(:thumb) if @post.image.present? %>
</p>
<div class = "buttons">
<b class = "button"><%= link_to "Edit", edit_post_path(@post) %>  </b>
<b class = "button">  <%= link_to "Destroy", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></b>
</div>
<b class = "button"><%= link_to 'Back', posts_path %></b>
<%= render 'facebook_posts/form', post: @post %>
<%= render 'comments/form', post: @post, comment: @comment %>

<% @post.comments.each do |comment| %>
  <p><%= comment.body %></p>
 <p class = "button">
    <%= link_to "Destroy Comment", [comment.post, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
  </p>
<% end %>
