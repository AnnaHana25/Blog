<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<%= image_tag @post.image.url(:thumb) if @post.image.present? %>
<p>
<%= link_to "Edit", edit_post_path(@post) %> | 
  <%= link_to "Destroy", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
</p>
<%= link_to 'Back', posts_path %>
<%= render 'facebook_posts/form', post: @post %>
<%= render 'comments/form', post: @post, comment: @comment %>

<% @post.comments.each do |comment| %>
  <p><%= comment.body %></p>
 <p>
    <%= link_to "Destroy Comment", [comment.post, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
  </p>
<% end %>
